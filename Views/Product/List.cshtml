@model ICollection<Store.Models.Product>

    <div class="container-fluid m-3">
        <h2>Lista produktów</h2>
        <table class="table">
            @foreach (var product in @Model)
            {
            <tr>
                <td>
                    @product.ProductName
                </td>
                <td>
                    @product.Categories
                </td>
                <td>
                    @product.Brands
                </td>
                <td>
                    @product.Price
                </td>
                <td>
                    <a class="btn btn-primary" asp-controller="Product" asp-action="EditForm" asp-route-id="@product.Id">Edytuj</a>
                    <a class="btn btn-primary" asp-controller="Product" asp-action="Delete" asp-route-id="@product.Id">Usuń</a>
                </td>
            </tr>
            }
        </table>
    </div>